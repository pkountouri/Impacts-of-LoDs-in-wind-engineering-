FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     simpleFoam;

startFrom       latestTime;

startTime       2;

stopAt          endTime;

endTime         5002; //if the simulation stops without converging then we need to increase this number

deltaT          1;

writeControl    timeStep;

writeInterval   500;

purgeWrite      0;

writeFormat     binary;

writePrecision  12;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable yes;

libs ("libatmosphericModels.so"  //add nutAtmwallFunction
       "libUserturbulenceModels.so"
       ); //add z0 for nutty and epsilon 


yPlus1
{
 	//Mandatory entries (unmodifiable)	
	type            yPlus;
        libs            (fieldFunctionObjects);
}
	    

functions
{
  #includeFunc residuals
  #includeFunc probes
}

