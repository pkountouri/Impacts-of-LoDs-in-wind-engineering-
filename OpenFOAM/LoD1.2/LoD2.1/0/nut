FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      nut;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -1 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    #include "include/ABLConditions"

    y0 //main inlflow direction
    {
        type            calculated;
        value           uniform 0;
    }

    x1 // main outflow direction
    {
        type            calculated;
        value           uniform 0;
    }

    y1 // main outflow direction
    {
        type            calculated;
        value           uniform 0;
    }

    x0 //main inlflow direction
    {
        type            calculated;
        value           uniform 0;
    }

    floor
    {
        type            nutkAtmRoughWallFunction;
        z0              uniform 0.2929;
        value           uniform 0;
    }

    buildings
    {
        type            nutkWallFunction;
        value           uniform 0;
    }

    top
    {
        type            calculated;
        value           uniform 0;
    }
/*
    x0
    {
        type            symmetry;	
    }

    y0
    {
        type            calculated;
	value           uniform 0;
    }

    x1
    {
        type            symmetry;     
    }

    y1
    {
        type            calculated;
	value           uniform 0;
    }
*/
    
    ground
    {
        type            nutkAtmRoughWallFunction;
        value           uniform 0;
	z0	        uniform	0.3; // campus is located in suburban terrain 
    }

    Terrain
    {
        type            nutkAtmRoughWallFunction;
        value           uniform 0;
	z0		uniform 0.3; // suburban terrain
    }
   

    terrain
    {
        type            nutkAtmRoughWallFunction;
	value           uniform 0;
	z0              uniform 0.3; // suburban terrain
    }


    Vegetation
    {
        type            nutkAtmRoughWallFunction; 
        value           uniform 0;
	z0		uniform 0.03; //low vegetation (i.e grass)
    }

    sky
    {
        type            symmetry;
        
    }
}
